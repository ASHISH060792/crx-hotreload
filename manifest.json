{
    "manifest_version": 2,

    "name":        "Chrome Extension Hot Reloader EXAMPLE",
    "description": "An example extension which demonstrates hot-reloading",
    "version":     "1.1337.0",

    "permissions": ["tabs", "activeTab"],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["hot-reload.js"]
    }],

    "background": {
    	"scripts": ["hot-reload-background.js"]
  	}
}